labels_headers = []
for line in labels_name:
    if not line[0] == '#':
       labels_table.append([col for col in line.split(" ") if col])
    elif 'ColHeaders' in line:
        labels_headers = [col for col in line.split(" ") if col]
        labels_headers = stats_headers[2:]
labels_file.close()
